<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.HamroChat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:fontFamily">@font/roboto_condensed</item>

        <!--        to change the color of the all the item in the toolbar -->
        <item name="android:statusBarColor">@color/main_accent_color</item>
    </style>

    <style name="Theme.HamroChat" parent="Base.Theme.HamroChat" />



    <color name="accent">@color/blue</color>
    <color name="accent_secondary">@color/blue</color>
    <color name="background">@color/violent</color>
    <color name="background_secondary">@color/light_blue</color>

    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="background">@drawable/card_background</item>
    </style>

    //bottomsheet themes

    <style name="BottomSheetStyle" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">

        <item name="background">@android:color/transparent</item>
    </style>



    // tablayout theme
    <style name="tabCustomTheme" parent="Widget.Material3.TabLayout">
        <item name="android:fontFamily">@font/roboto_condensed</item>
        <item name="textAllCaps">false</item>
        <item name="tabSelectedTextColor">@color/main_accent_color</item>
        <item name="tabTextColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="background">@drawable/tab_layout_background</item>
        <item name="tabIndicatorColor">@color/main_accent_color</item>
    </style>
    //splash theme

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>

        <!-- Customize other attributes like colors, fonts, etc. here -->
    </style>

    // themes for progress dialog

    <style name="progressDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>